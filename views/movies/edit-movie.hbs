<h2>Edit the movie: {{movie.title}}</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
  <label> Title: </label>
    <input type="text" name="title" value="{{movie.title}}" />


  <label> Genre: </label>
    <input type="text" name="genre" value="{{movie.genre}}" />


  <label> Plot: </label>
    <input type="text" name="plot" value="{{movie.plot}}" />

 <label for="cast"> Cast: </label>
    <select id="cast" name="cast" multiple>
        {{#each celebrities}}
        <option value="{{movie._id}}" {{#if this.selected}} selected {{/if}}>{{this.name}}</option>
        {{/each}}
    </select>

<button type="submit">Save changes</button>

</form>